@import '../node_modules/nib'

global-reset()

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')

$backgroundColor = #edf1f7
$secondaryColor = #727e93
$purp = #937bcd
$orang = #ff4e17
$gree = #08b462
$pastel = #c2d1f2
$headline = 75px
$headline2 = 25px
$headline3 = 25px
$bodyWidth = 850px
$spacing = 120px
$lineHeight2 = 32px
$lineHeight = 85px
$headline3 = 20px

body, html
	width: 100%
	height: auto
	background: $backgroundColor
	overflow-x: hidden
	font-size: $headline2
	line-height: $lineHeight2
	white-space nowrap
	font-family: 'Otiz'
	-webkit-font-smoothing: antialiased

	a
		text-decoration: none
		color: inherit

webfont('Otiz', 'otiz', true, 'normal')

.flashDiv
	background: transparent

.rainCanvas
	width 100%
	height 100%
	position absolute

.wrapper
	z-index: 999
	width: 100%
	height: auto
	background: url('../img/backrain2.svg') repeat;
	box-sizing: border-box
	position: absolute
	animation: backRain 80s linear infinite
	box-sizing: border-box


	img
		display:block
		margin: 0 auto
		padding: 20px 0
		#george-rule
			margin-top: -10px !important
.content
	width: $bodyWidth
	margin: 780px auto 0 auto
	text-align: center

.video
	margin 0 auto
	width: 100%
	height: 30%
	padding: 10%
	display: block

.headline
	width: 100%
	display: inline-block
	text-align: center
	color: $secondaryColor
	font-size: $headline
	line-height: $lineHeight

.links
	margin: $spacing 0
	font-size: $headline3
	letter-spacing: 0.03em
	width: 600px
	position: relative
	left: 50%
	transform: translateX(-50%)
	ul
		li
			display: inline-block
			width: 33.333%
	abbr
		font-size $headline2 - 3px
		letter-spacing: 0.1em
.default-color
	color: $secondaryColor
.purp
	color: $purp
.orang
	color: $orang
.pastel
	color $pastel
.left-li
	text-align: left
.center-li
	text-align: center
.right-li
	text-align: right

.testRain
	width: 100%
	height: 100%
	animation: testRain 27s linear infinite
	position: absolute

	img
		width: 110%

.testRain2
	width: 100%
	height: 100%
	animation: testRain2 35s linear infinite
	position: absolute
	transform: translate3d(-120%,-120%,0)

	img
		width: 110%

.announcement
	color: $purp
	font-size: $headline2
	letter-spacing: 0.03em

	.album-title
		font-size: $headline
		line-height: $lineHeight

section
	margin-bottom: $spacing * 2

.d6
	margin-top: -200px

.release-date
	color: $orang
.tracklist
	color: $secondaryColor
	margin-top: -100px
	letter-spacing: 0.01em
	li
		list-style: none
		text-align: center

.asterisk
	letter-spacing: -4px

.footnotes
	font-size: $headline3
	line-height: 22px
	margin-top: 30px

.footnote-left
	text-align: center
	display: inline-block
	float: left
	width: 50%
	left: 0
.footnote-right
	text-align: center
	display: inline-block
	float: left
	width: 50%
	left: 0
	

.footer
	width: 850px
	height: 400px
	color: $pastel
	font-size: $headline3
.quotation
	position: relative
	top: 200px
	margin-top: 200px
.left-footer
	position: relative
	left: 0
	width: 100px
	top: 50%;
	-webkit-transform:rotate(-90deg);
	transform-origin: 50% 50%
	display: block

.right-footer
	position: relative
	left: 750px
	width: 100px
	top: -25%;
	-webkit-transform: rotate(90deg);
	transform-origin: 50% 50%
	display: block;

.hide
	opacity: 0

.logo
	width: 40px


@keyframes testRain {
	0% {transform: translate3d(0,0,0)}
	100% {transform: translate3d(100%,100%,0)}
}

@keyframes backRain {
	0% {background-position: 0% 0%;}
	100% {background-position: 4000px 4000px;}
}

@keyframes testRain2 {
	0% {transform: translate3d(-120%,-100%,0)}
	100% {transform: translate3d(120%,100%,0)}
}

@keyframes marquee {
  from {
    transform translateX(0)
  }
  to {
    transform translateX(-100%)
  }
}



