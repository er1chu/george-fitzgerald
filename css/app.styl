@import '../node_modules/nib'

global-reset()

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')

$backgroundColor = #edf1f7
$secondaryColor = #727e93
$purp = #937bcd
$orang = #ff4e17
$gree = #08b462
$pastel = #c2d1f2
$headline = 75px
$headline2 = 30px
$bodyWidth = 700px
$spacing = 60px


body, html
	width: 100%
	height: 100%
	background: $backgroundColor
	overflow-x: hidden
	white-space nowrap
	font-family: 'Otiz'

webfont('Otiz', 'otiz', true, 'normal')

.flashDiv
	background: transparent

.rainCanvas
	width 100%
	height 100%
	position absolute

.wrapper
	z-index: 999
	width: 100%
	height: 100%
	background: url('../img/backrain2.svg');
	box-sizing: border-box
	position: absolute
	animation: backRain 80s linear infinite
	top: 50%
	left: 50%
	box-sizing: border-box
	transform: translate(-50%,-50%)

	img
		display:block
		margin: 0 auto
		padding-bottom: 20px
.content
	width: $bodyWidth
	margin: 0 auto

.video
	margin 0 auto
	width: 100%
	height: 30%
	padding: 10%
	display: block

.headline
	width: 100%
	display: inline-block
	text-align: center
	color: $secondaryColor
	font-size: $headline

.links
	margin: $spacing auto
	font-size: $headline2
	color: $secondaryColor
	position: absolute
	left: 50%
	transform: translateX(-50%)
	ul
		li
			display: inline-block
			width: calc( 600px / 3)
.left-li
	text-align: left
.center-li
	text-align: center
.right-li
	text-align: right

.testRain
	width: 100%
	height: 100%
	animation: testRain 27s linear infinite
	position: absolute

	img
		width: 110%

.testRain2
	width: 100%
	height: 100%
	animation: testRain2 35s linear infinite
	position: absolute
	transform: translate3d(-120%,-120%,0)

	img
		width: 110%



@keyframes testRain {
	0% {transform: translate3d(0,0,0)}
	100% {transform: translate3d(100%,100%,0)}
}

@keyframes backRain {
	0% {background-position: 0% 0%;}
	100% {background-position: 4000px 4000px;}
}

@keyframes testRain2 {
	0% {transform: translate3d(-120%,-100%,0)}
	100% {transform: translate3d(120%,100%,0)}
}

@keyframes marquee {
  from {
    transform translateX(0)
  }
  to {
    transform translateX(-100%)
  }
}



@keyframes flashAnim {
    0% { background: transparent; }
    55% { background: rgba(254, 255, 202, 0.27); }
    60% { background: transparent; }
    75% { background: rgba(254, 255, 202, 0.27); }
    80% { background: transparent; }
    95% { background: rgba(254, 255, 202, 0.27); }
    100% { background: transparent; }
}

