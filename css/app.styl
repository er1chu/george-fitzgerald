@import '../node_modules/nib'

global-reset()

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')

body, html
	width: 100%
	height: 100%
	background: #000

webfont('Otiz', 'otiz', true, 'normal')

.flashDiv
	background: transparent

.rainCanvas
	width 100%
	height 100%
	position absolute

.wrapper
	z-index: 999
	width: 80%
	position: absolute
	background: transparent
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)

.video
	margin 0 auto
	width: 100%
	height: 30%
	padding: 10%
	display: block

.headline
	width: 100%
	display: inline-block
	text-align: center
	color: #fff
	font-size: 122px
	font-family: 'Otiz'

.testRain
	width: 10%
	height: 10%
	border-radius: 50%
	


@keyframes testRain {
	0% {top: 0%; left: 0%;}
	50% {top:50%;left:50%;}
	100% {top:100%;left:100%;}
}






